# ====== DELAYS Y TIEMPOS ======
# Delay mínimo entre acciones (segundos)
MIN_DELAY=0.5

# Delay máximo entre acciones (segundos)
MAX_DELAY=2.0

# ====== RUTAS DE ARCHIVOS ======
# Carpeta de descargas
